<% if @ssl -%>
# SSL aktiviert: HTTP-Weiterleitung von Port 80 auf 443
<VirtualHost *:80>
  ServerName <%= @servername %>
  DocumentRoot <%= @docroot %>

  <% if @redirect -%>
  # Weiterleitung auf den Backend-Server
  Redirect permanent / <%= @backend %>
  <% else -%>
  # Weiterleitung von HTTP auf HTTPS
    Redirect permanent / <%= "https://#{@backend}" %>
  <% end -%>

  ErrorLog ${APACHE_LOG_DIR}/<%= @servername %>-error.log
  CustomLog ${APACHE_LOG_DIR}/<%= @servername %>-access.log combined
</VirtualHost>


<VirtualHost *:443>
  ServerName <%= @servername %>
  DocumentRoot <%= @docroot %>

  <Directory <%= @docroot %>>
    Options Indexes FollowSymLinks
    AllowOverride All
    Require all granted
  </Directory>

  ErrorLog ${APACHE_LOG_DIR}/<%= @servername %>-ssl-error.log
  CustomLog ${APACHE_LOG_DIR}/<%= @servername %>-ssl-access.log combined

  SSLEngine on
  SSLCertificateFile <%= @cert_path %><%= @servername %>
  SSLCertificateKeyFile <%= @key_path %><%= @cert_path %>
</VirtualHost>

<% else -%>
# Kein SSL: Einfacher VirtualHost auf Port 80
<VirtualHost *:80>
  ServerName <%= @servername %>
  DocumentRoot <%= @docroot %>

  <Directory <%= @docroot %>>
    Options Indexes FollowSymLinks
    AllowOverride All
    Require all granted
  </Directory>

  <% if @redirect -%>
  # Weiterleitung auf den Backend-Server
    Redirect permanent / <%= "https://#{@backend}" %>
  <% end -%>

  ErrorLog ${APACHE_LOG_DIR}/<%= @servername %>-error.log
  CustomLog ${APACHE_LOG_DIR}/<%= @servername %>-access.log combined
</VirtualHost>

<% end -%>
